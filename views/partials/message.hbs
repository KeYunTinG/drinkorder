{{#if successMessage}}
<div class="alert alert-success text-center alert-dismissible fade show" style="margin-bottom:0px" role="alert">
  {{successMessage}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#if errorMessage}}
<div class="alert alert-danger text-center alert-dismissible fade show" style="margin-bottom:0px" role="alert">
  {{errorMessage}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}