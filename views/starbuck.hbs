<div class="container">
  <img data-testid="hero-banner-image" class="vendor-responsive-banner__image"
    srcset="https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=400&amp;height=100&amp;quality=45 400w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=600&amp;height=150&amp;quality=45 600w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=800&amp;height=200&amp;quality=45 800w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=1000&amp;height=250&amp;quality=45 1000w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=1200&amp;height=300&amp;quality=45 1200w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=1600&amp;height=400&amp;quality=45 1600w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=2000&amp;height=500&amp;quality=45 2000w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=2500&amp;height=625&amp;quality=45 2500w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=3000&amp;height=750&amp;quality=45 3000w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=3500&amp;height=875&amp;quality=45 3500w, https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg?width=4000&amp;height=1000&amp;quality=45 4000w, "
    src="https://images.deliveryhero.io/image/fd-tw/LH/j3rn-hero.jpg"
    sizes="(min-width:960px) calc(100vw - 352px),100vw" alt="STARBUCKS 星巴克 (新竹北門市) hero banner">
  <div class="main mx-auto " style="height:200px;  margin-top:10px;">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each Commodities}}
      <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#e{{this.id}}">
        <div class="col">
          <div class="card" style="height:440px">
            <img src="{{this.logoPath}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
            </div>
          </div>
        </div>
      </button>
      <!-- Modal -->
      <div class="modal fade" id="e{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">請確認訂單</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <img src="{{this.logoPath}}" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">返回</button>
              <form action="/starbuck/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-primary">送出</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>